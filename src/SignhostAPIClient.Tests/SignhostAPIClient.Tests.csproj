<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Build">
    <TargetFramework>net45</TargetFramework>
    <CodeAnalysisRuleSet>../signhost.ruleset</CodeAnalysisRuleSet>
